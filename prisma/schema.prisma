// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id Int  @default(autoincrement()) @id
  name String  
  email String 
  password String?
  last_session DateTime
  updated_at DateTime @default(now())
  date_born DateTime 
  playlists Playlist[] 
   
}

model song{
  id Int  @default(autoincrement()) @id
  name String 
  artist String 
  album String 
  year Int
  genre String 
  duration Int
  isPublic Boolean @default(true)
  playlists Playlist[]

}

model Playlist {
  id Int  @default(autoincrement()) @id
  name String 
  user  User? @relation(fields: [userId], references: [id])
  userId Int
  songs song[]

}